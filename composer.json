{
    "name": "neto737/googleauthenticator",
    "description": "Google Authenticator 2-factor authentication",
    "type": "library",
    "keywords": [
        "TOTP",
        "2FA",
        "2 Factor Authenticator library"
    ],
    "license": "BSD-2-Clause",
    "authors": [
        {
            "name": "Neto",
            "email": "neto737@live.com",
            "homepage": "https://meth0d.dev"
        },
        {
            "name": "Michael Kliewe",
            "email": "info@phpgangsta.de",
            "homepage": "http://www.phpgangsta.de/",
            "role": "Developer"
        }
    ],
    "support": {
        "source": "https://github.com/neto737/GoogleAuthenticator",
        "issues": "https://github.com/neto737/GoogleAuthenticator/issues"
    },
    "config": {
        "optimize-autoloader": true
    },
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.2"
    },
    "autoload": {
        "classmap": [
            "src/"
        ],
        "psr-4": {
            "src\\": "src/GoogleAuthenticator.php"
        }
    },
    "scripts": {
        "build": "composer install --no-dev",
        "build-dev": "composer install",
        "test": "phpunit --colors=always --configuration=phpunit.xml"
    }
}
